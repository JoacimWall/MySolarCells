                   BackgroundColor="{x:Static theming:AppColors.Primary100Color}"
                   BorderColor="Transparent"
                   CornerRadius="8"
                   HasShadow="False"
                   HeightRequest="17"
                   HorizontalOptions="Start"
                   IsVisible="False"
                   VerticalOptions="Start"
                   WidthRequest="38">
                <Label HorizontalTextAlignment="Center"
                       Style="{StaticResource LabelStyleNormalMicroWhite}"
                       Text="{Binding Source={x:Static trans:AppResources.New}, Converter={StaticResource TextCaseConverter}, ConverterParameter={x:Static toolkit:TextCaseType.Upper}}" />
            </Frame>-->

            <Label x:Name="IconLabelExternal"
                   Margin="0,11,10,0"
                   HorizontalOptions="End"
                   FontFamily="AppIconsFont"
                   VerticalOptions="Start" />

            <Label x:Name="IconLabel"
                   Margin="0,20,0,0"
                   FontSize="40"
                   FontFamily="AppIconsFont"
                   HorizontalTextAlignment="Center" />

            <Label x:Name="title"
                   Grid.Row="1"
                   Margin="0,5,0,0"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="Start" />

        </Grid>
    </ContentView.Content>
</ContentView>
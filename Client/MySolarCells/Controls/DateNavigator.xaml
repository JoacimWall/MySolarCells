<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:theming="clr-namespace:MySolarCells.Resources.Styles"
             x:Class="MySolarCells.Controls.DateNavigator">
    <Grid  ColumnDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto" RowDefinitions="30,Auto" Padding="0" ColumnSpacing="0">
        <Border Grid.Column="0" Stroke="{x:Static theming:AppColors.Gray400Color}" Padding="0" Margin="3,0"  
                    StrokeThickness="2" >
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="25,25,25,25" />
            </Border.StrokeShape>
            <Label Padding="0,-1,0,2" Margin="0"  FontSize="29" TextColor="{x:Static theming:AppColors.Gray700Color}" Text=" - " InputTransparent="True" BackgroundColor="Transparent" VerticalTextAlignment="Center" />
             <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="Back_Tapped" />
            </Border.GestureRecognizers>
        </Border>
        <Border Grid.Column="1" Stroke="{x:Static theming:AppColors.Gray400Color}" Padding="0" Margin="3,0" 
                    StrokeThickness="2" >
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="25,25,25,25" />
            </Border.StrokeShape>
            <Label Padding="0,0,0,2" Margin="0"  FontSize="23" TextColor="{x:Static theming:AppColors.Gray700Color}" Text=" + " InputTransparent="True" BackgroundColor="Transparent" />
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="Forward_Tapped" />
            </Border.GestureRecognizers>
        </Border>
        <Border Grid.Column="2" Stroke="{x:Static theming:AppColors.Gray400Color}" Padding="0" Margin="3,0" BackgroundColor="{Binding ChartDataRequest.TodayBackgrundColor}" 
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 6,6,6,6" >
            <Label Padding="4,0,4,0" Margin="0" TextColor="{x:Static theming:AppColors.Gray700Color}" Text="TODAY" InputTransparent="True" BackgroundColor="Transparent" VerticalTextAlignment="Center" />
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="Today_Tapped" />
            </Border.GestureRecognizers>
        </Border>
        <Border Grid.Column="3" Stroke="{x:Static theming:AppColors.Gray400Color}" Padding="0" Margin="2,0,-2,0" BackgroundColor="{Binding ChartDataRequest.DayBackgrundColor}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 6,0,6,0" >
            <Label Padding="4,0,4,0" TextColor="{x:Static theming:AppColors.Gray700Color}" Text="DAY" InputTransparent="True" VerticalOptions="Center" BackgroundColor="Transparent" VerticalTextAlignment="Center"/>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="Day_Tapped" />
            </Border.GestureRecognizers>
        </Border>

        <Border Grid.Column="4" Stroke="{x:Static theming:AppColors.Gray400Color}" Padding="0" Margin="-2,0" BackgroundColor="{Binding ChartDataRequest.WeekBackgrundColor}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 0,0,0,0">
            <Label Padding="4,0,4,0"     TextColor="{x:Static theming:AppColors.Gray700Color}" Text="WEEK" InputTransparent="True" BackgroundColor="Transparent" VerticalTextAlignment="Center"/>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="Week_Tapped" />
            </Border.GestureRecognizers>
        </Border>
        <Border Grid.Column="5" Stroke="{x:Static theming:AppColors.Gray400Color}" Padding="0" Margin="-2,0"  BackgroundColor="{Binding ChartDataRequest.MonthBackgrundColor}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 0,0,0,0">
            <Label Padding="4,0,4,0"    TextColor="{x:Static theming:AppColors.Gray700Color}" Text="MONTH" InputTransparent="True" BackgroundColor="Transparent" VerticalTextAlignment="Center"/>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="Month_Tapped" />
            </Border.GestureRecognizers>
        </Border>
        <Border Grid.Column="6" Stroke="{x:Static theming:AppColors.Gray400Color}" Padding="0" Margin="-2,0"  BackgroundColor="{Binding ChartDataRequest.YearBackgrundColor}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 0,6,0,6">
            <Label Padding="4,0,4,0"   TextColor="{x:Static theming:AppColors.Gray700Color}" Text="YEAR" InputTransparent="True" BackgroundColor="Transparent" VerticalTextAlignment="Center"/>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="Year_Tapped" />
            </Border.GestureRecognizers>
        </Border>
        <Border x:Name="UnitButton" HeightRequest="30"  Grid.Column="5" Grid.Row="1"  Stroke="{x:Static theming:AppColors.Gray400Color}" Padding="0" Margin="2,0,-1,0" BackgroundColor="{Binding ChartDataRequest.KwhBackgrundColor}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 6,0,6,0" >
            <Label Padding="4,0,4,0"     TextColor="{x:Static theming:AppColors.Gray700Color}" Text="kWh" InputTransparent="True" BackgroundColor="Transparent" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="Unit_Tapped" />
            </Border.GestureRecognizers>
        </Border>
        <Border x:Name="CurrencyButton" HeightRequest="30"  Grid.Column="6" Grid.Row="1" Stroke="{x:Static theming:AppColors.Gray400Color}" Padding="0" Margin="-2,0"  BackgroundColor="{Binding ChartDataRequest.CurrencyBackgrundColor}"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 0,6,0,6">
            <Label Padding="4,0,4,0"    TextColor="{x:Static theming:AppColors.Gray700Color}" Text="SEK" InputTransparent="True" BackgroundColor="Transparent" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
            <Border.GestureRecognizers>
                <TapGestureRecognizer Tapped="Currency_Tapped" />
            </Border.GestureRecognizers>
        </Border>

    </Grid>
</ContentView>


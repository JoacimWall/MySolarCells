<?xml version="1.0" encoding="utf-8" ?>
<views:BaseContentPage  xmlns:views="clr-namespace:MySolarCells.Views"
                        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        x:Class="MySolarCells.Views.Roi.RoiView"
                        xmlns:vm="clr-namespace:MySolarCells.ViewModels.Roi"
                        xmlns:trans="clr-namespace:MySolarCells.Resources.Translations"
                        xmlns:theming="clr-namespace:MySolarCells.Resources.Styles"
                        Shell.NavBarIsVisible="True"
                        Title="Total ROI" 
                        x:DataType="vm:RoiViewModel">
    <Grid Margin="8" ColumnSpacing="4" ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">
        
       <!--TotalPurchased-->
        <Label Grid.Column="0" Grid.Row="0" Text="Purchased"/>
        <Label Grid.Column="1" Grid.Row="0" Text="{Binding RoiStats.TotalPurchased}" HorizontalTextAlignment="End"/>
        <Label Grid.Column="2" Grid.Row="0" Text="{Binding RoiStats.Unit}"/>
         <!--TotalPurchasedCost-->
        <Label Grid.Column="0" Grid.Row="1" Text="Purchased cost"/>
        <Label Grid.Column="1" Grid.Row="1" Text="{Binding RoiStats.TotalPurchasedCost}" HorizontalTextAlignment="End"/>
        <Label Grid.Column="2" Grid.Row="1" Text="{Binding RoiStats.Currency}"/>
        <BoxView Margin="0,8" Grid.ColumnSpan="3" Grid.Row="2" HeightRequest="1" />

        <!--TotalProductionSold-->
        <Label Grid.Column="0" Grid.Row="3" Text="Production sold"/>
        <Label Grid.Column="1" Grid.Row="3" Text="{Binding RoiStats.TotalProductionSold}" HorizontalTextAlignment="End"/>
        <Label Grid.Column="2" Grid.Row="3" Text="{Binding RoiStats.Unit}"/>
         <!--TotalProductionNegativeSold-->
        <Label Grid.Column="0" Grid.Row="4" Text="Production sold (negative price)"/>
        <Label Grid.Column="1" Grid.Row="4" TextColor="{x:Static theming:AppColors.SignalOrangeColor}" Text="{Binding RoiStats.TotalProductionNegativeSold}" HorizontalTextAlignment="End"/>
        <Label Grid.Column="2" Grid.Row="4" Text="{Binding RoiStats.Unit}"/>
        <!--TotalProductionSoldProfit-->
        <Label Grid.Column="0" Grid.Row="5" Text="Production sold profit"/>
        <Label Grid.Column="1" Grid.Row="5"  Text="{Binding RoiStats.TotalProductionSoldProfit}" HorizontalTextAlignment="End"/>
        <Label Grid.Column="2" Grid.Row="5" Text="{Binding RoiStats.Currency}"/>
         <!--TotalProductionSoldNegativeProfit-->
        <Label Grid.Column="0" Grid.Row="6" Text="Production sold profit (negative price)"/>
        <Label Grid.Column="1" Grid.Row="6" TextColor="{x:Static theming:AppColors.SignalOrangeColor}" Text="{Binding RoiStats.TotalProductionSoldNegativeProfit}" HorizontalTextAlignment="End"/>
        <Label Grid.Column="2" Grid.Row="6" Text="{Binding RoiStats.Currency}"/>
        <!--TotalCompensationForProductionToGrid-->
        <Label Grid.Column="0" Grid.Row="7" Text="Compensation for production to grid"/>
        <Label Grid.Column="1" Grid.Row="7" Text="{Binding RoiStats.TotalCompensationForProductionToGrid}" HorizontalTextAlignment="End"/>
        <Label Grid.Column="2" Grid.Row="7" Text="{Binding RoiStats.Currency}"/>
        <!--TotalSavedEnergyTaxReductionProductionToGrid-->
        <Label Grid.Column="0" Grid.Row="8" Text="Saved energy tax"/>
        <Label Grid.Column="1" Grid.Row="8" Text="{Binding RoiStats.TotalSavedEnergyTaxReductionProductionToGrid}" HorizontalTextAlignment="End"/>
        <Label Grid.Column="2" Grid.Row="8" Text="{Binding RoiStats.Currency}"/>
         <BoxView Margin="0,8" Grid.ColumnSpan="3" Grid.Row="9" HeightRequest="1" />


         <!--TotalProductionOwnUse-->
        <Label Grid.Column="0" Grid.Row="10" Text="Production own use"/>
        <Label Grid.Column="1" Grid.Row="10" Text="{Binding RoiStats.TotalProductionOwnUse}" HorizontalTextAlignment="End"/>
        <Label Grid.Column="2" Grid.Row="10" Text="{Binding RoiStats.Unit}"/>
        <!--ProductionOwnUseProfit-->
        <Label Grid.Column="0" Grid.Row="11" Text="Production own use profit"/>
        <Label Grid.Column="1" Grid.Row="11" Text="{Binding RoiStats.TotalProductionOwnUseProfit}" HorizontalTextAlignment="End"/>
        <Label Grid.Column="2" Grid.Row="11" Text="{Binding RoiStats.Currency}"/>
        <!--TotalSavedTransferFeeProductionOwnUse-->
        <Label Grid.Column="0" Grid.Row="12" Text="Saved transfer fee"/>
        <Label Grid.Column="1" Grid.Row="12" Text="{Binding RoiStats.TotalSavedTransferFeeProductionOwnUse}" HorizontalTextAlignment="End"/>
        <Label Grid.Column="2" Grid.Row="12" Text="{Binding RoiStats.Currency}"/>
         <!--TotalSavedEnergyTaxProductionOwnUse-->
        <Label Grid.Column="0" Grid.Row="13" Text="Saved energy tax"/>
        <Label Grid.Column="1" Grid.Row="13" Text="{Binding RoiStats.TotalSavedEnergyTaxProductionOwnUse}" HorizontalTextAlignment="End"/>
        <Label Grid.Column="2" Grid.Row="13" Text="{Binding RoiStats.Currency}"/>
         <BoxView  Margin="0,8" Grid.ColumnSpan="3" Grid.Row="14" HeightRequest="1" />
         <!--TotalSaved-->
        <Label Grid.Column="0" Grid.Row="15" Text="Total Saved"/>
        <Label Grid.Column="1" Grid.Row="15" Text="{Binding RoiStats.TotalSaved}" HorizontalTextAlignment="End"/>
        <Label Grid.Column="2" Grid.Row="15" Text="{Binding RoiStats.Currency}"/>
         <!--TotalProduction-->
        <Label Grid.Column="0" Grid.Row="16" Text="Total production"/>
        <Label Grid.Column="1" Grid.Row="16" Text="{Binding RoiStats.TotalProduction}" HorizontalTextAlignment="End"/>
        <Label Grid.Column="2" Grid.Row="16" Text="{Binding RoiStats.Unit}"/>
        <!--Production Index -->
        <Label Grid.Column="0" Grid.Row="17" Text="Production index (prod/day/ins. kWh)"/>
        <Label Grid.Column="1" Grid.Row="17" Text="{Binding RoiStats.ProductionIndex}" HorizontalTextAlignment="End"/>
        <Label Grid.Column="2" Grid.Row="17" Text="{Binding RoiStats.Unit}"/>
    </Grid>
    
</views:BaseContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<views:BaseContentPage  xmlns:views="clr-namespace:MySolarCells.Views"
                        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                        x:Class="MySolarCells.Views.Roi.RoiView"
                        xmlns:vm="clr-namespace:MySolarCells.ViewModels.Roi"
                        xmlns:trans="clr-namespace:MySolarCells.Resources.Translations"
                        xmlns:theming="clr-namespace:MySolarCells.Resources.Styles"
                        xmlns:control="clr-namespace:MySolarCells.Controls"
                        Shell.NavBarIsVisible="True"
                        x:DataType="vm:RoiViewModel">
    <Shell.TitleView>
        <Grid Margin="0,10" Padding="0,0" ColumnDefinitions="*,Auto">
            <Label Grid.Column="0" Grid.ColumnSpan="2" FontSize="20" TextColor="{x:Static theming:AppColors.WhiteColor}" Text="{x:Static trans:AppResources.ROI}" HorizontalTextAlignment="Center"/>
            <Border Grid.Column="1" Stroke="{x:Static theming:AppColors.WhiteColor}" HeightRequest="30" Padding="0" Margin="0,8"  
                    StrokeThickness="2" >
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20,20,20,20" />
                </Border.StrokeShape>
                <Button Padding="4" Margin="2" Command="{Binding SyncCommand}" FontSize="13" TextColor="{x:Static theming:AppColors.WhiteColor}" Text="{x:Static trans:AppResources.Refresh}" BackgroundColor="Transparent" ></Button>
            </Border>

        </Grid>

    </Shell.TitleView>
    <ScrollView>
        <Grid Margin="8" ColumnSpacing="4" ColumnDefinitions="*,Auto,Auto" RowDefinitions="Auto,Auto,Auto">
            <Label Grid.ColumnSpan="3" Text="{Binding ChartDataRequest.TimeStampTitle}" HorizontalTextAlignment="Center" FontSize="22"/>
            <control:DateNavigator Margin="8" Grid.Row="1" Grid.ColumnSpan="3" HorizontalOptions="End" ShowUnitCurrencySeletor="False"
                               GraphDataChangedCommand="{Binding ReloadGraphDataCommand}" ChartData="{Binding ChartDataRequest}" RoiSimulate="{Binding RoiSimulate}" ShowRoiSimulate="True"/>

            <!--Title-->
            <VerticalStackLayout Grid.Row="2" Grid.Column="0">
                <!--PRODUCTION AND CONSUMPTION-->
                <Label FontSize="17" FontAttributes="Bold" Text="{x:Static trans:AppResources.Production_And_Consumption}"/>
                <!--TotalProductionSold-->
                <Label  Text="{x:Static trans:AppResources.Sold}"/>
                <!--Battery_Charge-->
                <Label Text="{x:Static trans:AppResources.Battery_Charge}"/>
                <!--Production_Own_Use-->
                <Label  Text="{x:Static trans:AppResources.Own_Use}"/>
                <!--TotalPurchased-->
                <Label Text="{x:Static trans:AppResources.Purchased}"/>
                <!--Battery Used-->
                <Label Text="{x:Static trans:AppResources.Battery_used}"/>
                <BoxView Margin="0,4" HeightRequest="1" />
                <!--Produced-->
                <Label Text="{x:Static trans:AppResources.Production}"/>
                <!--Produced-->
                <Label Text="{x:Static trans:AppResources.Consumption}"/>
                <!--Balance_Production_Consumption-->
                <Label Text="{x:Static trans:AppResources.Balance_Production_Minus_Consumption}"/>
                <!-- COSTS AND REVENUES-->
                <Label  Margin="0,16,0,0" FontSize="17" FontAttributes="Bold" Text="{x:Static trans:AppResources.Costs_And_Rvenues}"/>
                <!--TotalProductionSoldProfit-->
                <Label  Text="{x:Static trans:AppResources.Production_Profit_Sold}"/>
                <!--TotalCompensationForProductionToGrid-->
                <Label Text="{x:Static trans:AppResources.Production_Grid_Compensation}"/>
                <!--TotalSavedEnergyTaxReductionProductionToGrid-->
                <Label Text="{x:Static trans:AppResources.Production_Saved_Energy_Tax}"/>
                <!--ProductionOwnUseProfit-->
                <Label Text="{x:Static trans:AppResources.Own_Use_Saved_Cost}"/>
                <!--TotalSavedTransferFeeProductionOwnUse-->
                <Label Text="{x:Static trans:AppResources.Own_Use_Saved_Transfer_Fee}"/>
                <!--TotalSavedEnergyTaxProductionOwnUse-->
                <Label Text="{x:Static trans:AppResources.Own_Use_Saved_Energy_Tax}"/>
                <!--TotalBatteryUsedProfit-->
                <Label Text="{x:Static trans:AppResources.Saved_Cost_Battery}"/>
                <!--TotalSavedTransferFeeBatteryUse-->
                <Label Text="{x:Static trans:AppResources.Saved_Transfer_Fee_Battery}"/>
                <!--TotalSavedEnergyTaxBatteryUse-->
                <Label Text="{x:Static trans:AppResources.Saved_Energy_Tax_Battery}"/>

                <!--TotalPurchasedCost-->
                <Label Text="{x:Static trans:AppResources.Purchase_Cost}"/>
                <!--TotalTransferFeePurchased-->
                <Label Text="{x:Static trans:AppResources.Purchase_Transfer_Fee}"/>
                <!--TotalTaxPurchased-->
                <Label Text="{x:Static trans:AppResources.Purchase_Energy_Tax}"/>
                <BoxView Margin="0,4" HeightRequest="1" />
                <!--Produced-->
                <Label Text="{x:Static trans:AppResources.Production}"/>
                <!--Produced-->
                <Label Text="{x:Static trans:AppResources.Consumption}"/>
                <!--Balance_Production_Consumption-->
                <Label Text="{x:Static trans:AppResources.Balance_Production_Minus_Consumption}"/>

            </VerticalStackLayout >
            <!--Value-->
            <VerticalStackLayout Grid.Row="2" Grid.Column="1" >
                <Label FontSize="17" FontAttributes="Bold" Text=" "/>
                <Label Text="{Binding RoiStats.TotalProductionSold}" HorizontalTextAlignment="End"/>
                <Label Text="{Binding RoiStats.TotalBatteryCharge}" HorizontalTextAlignment="End"/>
                <Label Text="{Binding RoiStats.TotalProductionOwnUse}" HorizontalTextAlignment="End"/>
                <Label Text="{Binding RoiStats.TotalPurchased}" HorizontalTextAlignment="End"/>
                <Label Text="{Binding RoiStats.TotalBatteryUsed}" HorizontalTextAlignment="End"/>
                <BoxView Margin="0,4" HeightRequest="1" />
                <!--SumProductionOwnUseAndBattery-->
                <Label Text="{Binding RoiStats.TotalProduction}" FontAttributes="Bold" HorizontalTextAlignment="End"/>
                <Label Text="{Binding RoiStats.TotalConsumption}" FontAttributes="Bold" HorizontalTextAlignment="End" />
                <Label Text="{Binding RoiStats.TotalBalanceProductionKwhMinusConsumptionKwh}" FontAttributes="Bold" HorizontalTextAlignment="End" />

                <Label  Margin="0,16,0,0"  FontSize="17" FontAttributes="Bold" Text=" "/>
                <Label Text="{Binding RoiStats.TotalProductionSoldProfit}" HorizontalTextAlignment="End"/>
                <Label Text="{Binding RoiStats.TotalCompensationForProductionToGrid}" HorizontalTextAlignment="End" />
                <Label Text="{Binding RoiStats.TotalSavedEnergyTaxReductionProductionToGrid}" HorizontalTextAlignment="End"/>
                <Label Text="{Binding RoiStats.TotalProductionOwnUseProfit}" HorizontalTextAlignment="End"/>
                <Label Text="{Binding RoiStats.TotalSavedTransferFeeProductionOwnUse}" HorizontalTextAlignment="End"/>
                <Label Text="{Binding RoiStats.TotalSavedEnergyTaxProductionOwnUse}" HorizontalTextAlignment="End"/>
                <Label Text="{Binding RoiStats.TotalBatteryUsedProfit}" HorizontalTextAlignment="End"/>
                <Label Text="{Binding RoiStats.TotalSavedTransferFeeBatteryUse}" HorizontalTextAlignment="End"/>
                <Label Text="{Binding RoiStats.TotalSavedEnergyTaxBatteryUse}" HorizontalTextAlignment="End"/>
                <Label Text="{Binding RoiStats.TotalPurchasedCost}" HorizontalTextAlignment="End"/>
                <Label Text="{Binding RoiStats.TotalTransferFeePurchased}" HorizontalTextAlignment="End"/>
                <Label Text="{Binding RoiStats.TotalTaxPurchased}" HorizontalTextAlignment="End"/>
                <BoxView Margin="0,4" HeightRequest="1" />
                <Label Text="{Binding RoiStats.SumProductionSoldAndOwnUseAndBattery}" HorizontalTextAlignment="End"/>
                <Label Text="{Binding RoiStats.SumPurchased}" HorizontalTextAlignment="End"/>
                <Label Text="{Binding RoiStats.TotalBalanceProductionProfitMinusConsumptionCost}" FontAttributes="Bold" HorizontalTextAlignment="End" />

            </VerticalStackLayout>

            <!--Unit-->
            <VerticalStackLayout Grid.Row="2" Grid.Column="2">
                <Label FontSize="17" FontAttributes="Bold" Text=" "/>
                <Label Text="{Binding RoiStats.Unit}" />
                <Label Text="{Binding RoiStats.Unit}" />
                <Label Text="{Binding RoiStats.Unit}" />
                <Label Text="{Binding RoiStats.Unit}" />
                <Label Text="{Binding RoiStats.Unit}" />
                <BoxView Margin="0,4" HeightRequest="1" />
                <Label Text="{Binding RoiStats.Unit}" />
                <Label Text="{Binding RoiStats.Unit}" />
                <Label Text="{Binding RoiStats.Unit}" />
                <Label Margin="0,16,0,0" FontSize="17" FontAttributes="Bold" Text=" "/>
                <Label Text="{Binding RoiStats.Currency}"/>
                <Label Text="{Binding RoiStats.Currency}"/>
                <Label Text="{Binding RoiStats.Currency}"/>
                <Label Text="{Binding RoiStats.Currency}"/>
                <Label Text="{Binding RoiStats.Currency}"/>
                <Label Text="{Binding RoiStats.Currency}"/>
                <Label Text="{Binding RoiStats.Currency}"/>
                <Label Text="{Binding RoiStats.Currency}"/>
                <Label Text="{Binding RoiStats.Currency}"/>
                <Label Text="{Binding RoiStats.Currency}"/>
                <Label Text="{Binding RoiStats.Currency}"/>
                <Label Text="{Binding RoiStats.Currency}"/>
                <BoxView Margin="0,4" HeightRequest="1" />
                <Label Text="{Binding RoiStats.Currency}"/>
                <Label Text="{Binding RoiStats.Currency}"/>
                <Label Text="{Binding RoiStats.Currency}"/>
            </VerticalStackLayout>



            <!--TotalProduction-->
            <!--<Label Text="{x:Static trans:AppResources.Total_Produced_And_Saved}" FontAttributes="Bold"/>-->
            <!--TotalSaved-->
            <!--<Label Text="{x:Static trans:AppResources.Total_Production_Sold_Own_Use}" FontAttributes="Bold"/>-->


            <!--CONSUMPTION-->
            <!--<Label Margin="0,16,0,0" FontSize="17" FontAttributes="Bold" Text=" " HorizontalTextAlignment="End"/>
   
               
                <BoxView Margin="0,4" HeightRequest="1" />
                <Label  Text="{Binding RoiStats.SumPurchased}" FontAttributes="Bold" HorizontalTextAlignment="End"/>-->





            <!--
                <Label Text="{Binding RoiStats.TotalSaved}" FontAttributes="Bold" HorizontalTextAlignment="End"/>-->








            <!--<BoxView Margin="0,4" Grid.ColumnSpan="3" Grid.Row="13" HeightRequest="1" />-->
            <!--SumPurchased-->
            <!--<Label Grid.Column="0" Grid.Row="14" Text="{x:Static trans:AppResources.Sum}" FontAttributes="Bold"/>
            <Label Grid.Column="1" Grid.Row="14" Text="{Binding RoiStats.SumProductionSold}" FontAttributes="Bold" HorizontalTextAlignment="End"/>
            <Label Margin="0,0,0,8" Grid.Column="2" Grid.Row="14" Text="{Binding RoiStats.Currency}" FontAttributes="Bold"/>-->



            <!--Intr Index -->
            <!--<Label Grid.Column="0" Grid.Row="27" Text="{x:Static trans:AppResources.Total_Interest}" FontAttributes="Bold"/>
            <Label Grid.Column="1" Grid.Row="27" Text="{Binding RoiStats.TotalInterest}" FontAttributes="Bold" HorizontalTextAlignment="End"/>
            <Label Grid.Column="2" Grid.Row="27" Text="{Binding RoiStats.Currency}" FontAttributes="Bold"/>-->
            <!--Production Index -->
            <!--<Label Grid.Column="0" Grid.Row="28" Text="{x:Static trans:AppResources.Production_Index_Desc_Prod_Day_ins_KWh}" FontAttributes="Bold"/>
            <Label Grid.Column="1" Grid.Row="28" Text="{Binding RoiStats.ProductionIndex}" FontAttributes="Bold" HorizontalTextAlignment="End"/>
            <Label Grid.Column="2" Grid.Row="28" Text="{Binding RoiStats.Unit}" FontAttributes="Bold"/>-->
        </Grid>
    </ScrollView>
</views:BaseContentPage>

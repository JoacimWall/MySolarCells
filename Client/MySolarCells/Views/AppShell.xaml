<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MySolarCells.Views.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:trans="clr-namespace:MySolarCells.Resources.Translations"
    xmlns:roi="clr-namespace:MySolarCells.Views.Roi"
    xmlns:energy="clr-namespace:MySolarCells.Views.Energy"
    xmlns:more="clr-namespace:MySolarCells.Views.More"
    FlyoutBehavior="Disabled"
    Title="MySolarCells">

    <TabBar>

        <ShellContent Title="{Binding Source={x:Static trans:AppResources.Production}}"
                      ContentTemplate="{DataTemplate energy:EnergyView}" 
                      Icon="chart.png"
                      Route="Energy" />
        <ShellContent Title="{Binding Source={x:Static trans:AppResources.ROI}}"
                      ContentTemplate="{DataTemplate roi:RoiView}"
                      Icon="coins.png"
                      Route="ROI" />
       
         <ShellContent Title="{Binding Source={x:Static trans:AppResources.More}}"
                      ContentTemplate="{DataTemplate more:MoreView}"
                      Icon="dots.png"
                      Route="More" />

    </TabBar>

</Shell>
